[core]
  excludesfile = ~/.gitignore
  editor = vim
  precomposeUnicode = true

[alias]
  a = add
  aa = add --all
  b = branch
  bd = branch --delete
  bm = branch --move
  ba = branch --all
  bc = rev-parse --abbrev-ref HEAD
  co = checkout
  cob = checkout -b
  com = checkout master
  cot = checkout --track
  cl = clone
  ci = commit
  cim = commit -m
  ciam = commit -am
  d = diff
  dc = diff --cached
  f = fetch
  fa = fetch --all --prune
  fo = fetch origin
  i = init
  ls = ls-files
  logs = log --stat
  logg = log --graph --decorate
  logo = log --graph --decorate --oneline
  lg = log --color --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lga = log --color --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --all
  lgs = log --color --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --stat
  m = merge
  ma = merge --abort
  mc = merge --continue
  ms = merge --skip
  mm = merge master
  ps = push
  pso = push origin
  psoh = push origin HEAD
  pl = pull
  r = remote
  ra = remote add
  rmv = remote rename
  rrm = remote remove
  rgu = remote get-url
  rsu = remote set-url
  rv = remote -v
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip
  rbm = rebase master
  re = reset
  reh = reset --hard
  rem = reset --mixed
  res = reset --soft
  rehh = reset --hard HEAD
  remh = reset --mixed HEAD
  resh = reset --soft HEAD
  rehom = reset --hard origin/master
  st = status
  stall = stash -all
  t = tag
  aliases = !git config -l | grep alias | cut -c 7-

[help]
  autocorrect = 1

[apply]
  whitespace = fix

[color]
  ui = auto

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  line-numbers = true
  side-by-side = true

[include]
  path = ~/.gitconfig.local
